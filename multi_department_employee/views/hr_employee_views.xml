<odoo>
    <record id="view_employee_form_inherit_multi_department" model="ir.ui.view">
        <field name="name">hr.employee.form.multi.department</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="department_ids" widget="many2many_tags" options="{'no_create': False}"/>
            </field>
            <field name="department_id" position="attributes">
    			<attribute name="invisible">1</attribute>
			</field>
        </field>
    </record>
</odoo>
