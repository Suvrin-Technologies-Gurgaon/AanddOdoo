<odoo>
    <record id="view_leave_form_days_only" model="ir.ui.view">
        <field name="name">hr.leave.form.days.only</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <field name="holiday_status_id" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
            <xpath expr="//header/button[@name='action_approve' and @type='object']" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_holidays_user</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_refuse' and @type='object']" position="attributes">
                <attribute name="groups">hr_holidays.group_hr_holidays_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
