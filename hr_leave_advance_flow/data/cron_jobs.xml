<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Carry forward earned leave every year -->
    <record id="ir_cron_carry_forward_sick_leave" model="ir.cron">
        <field name="name">Carry Forward Sick Leave</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.carry_forward_sick_leave()</field>
        <field name="interval_type">months</field>
        <field name="interval_number">12</field>
    </record>
</odoo>
