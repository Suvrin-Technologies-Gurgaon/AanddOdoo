<odoo>
    <!-- Form View -->
    <record id="view_out_office_schedule_form" model="ir.ui.view">
        <field name="name">emp.out.office.schedule.form</field>
        <field name="model">emp.out.office.schedule</field>
        <field name="arch" type="xml">
            <form string="Tour Visit">
                <header>
                        <field name="state" widget="statusbar" options="{'clickable': False}"/>
                        <button name="action_confirm"
                                type="object"
                                string="Confirm"
                                class="btn-primary"
                                invisible="state != 'new'"/>
                        <button name="action_cancel_out_of_office_schedule" type="object"
                                string="Cancel" class="btn-danger"
                                invisible="state != 'new'"/>
                    </header>
                <sheet>
                     <div class="row justify-content-between position-relative w-100 m-0 mb-2">
                            <div class="oe_title mw-75 ps-0 pe-2">
                                <h1 class="d-flex flex-row align-items-center">
                                    <field name="name" placeholder="Purpose....." required="True" style="font-size: min(4vw, 2.6rem);" readonly="state != 'new'"/>
                                </h1>
                            </div>
                        </div>



                    <group>
                        <group>

                            <field name="employee_id" required="1" readonly="state != 'new'"/>
                        </group>
                        <group>
                             <label for="start_date" string="Dates"/>
                            <div class="o_row">
                            <field
                                name="start_date"
                                widget="daterange"
                                options="{'end_date_field': 'end_date'}" readonly="state != 'new'"/>
                            <field name="end_date" invisible="1" />
                        </div>
                            <field name="description"  readonly="state != 'new'"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_out_office_schedule_list" model="ir.ui.view">
        <field name="name">emp.out.office.schedule.list</field>
        <field name="model">emp.out.office.schedule</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_out_office_schedule" model="ir.actions.act_window">
        <field name="name">Tour Visit</field>
        <field name="res_model">emp.out.office.schedule</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_out_office_schedule" name="Tour Visit" parent="hr_attendance.menu_hr_attendance_root"
              action="action_out_office_schedule" sequence="12"/>
</odoo>
