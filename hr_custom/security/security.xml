<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record id="timeoff_all_employees" model="res.groups">
        <field name="name">All Timeoff</field>
        <field name="category_id" ref="base.module_category_human_resources_time_off"/>
    </record>

    <record model="ir.rule" id="timeoff_all_employees_read">
            <field name="name">All Timeoff - Readonly</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr_custom.timeoff_all_employees'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        <field name="perm_read" eval="True"/>
        </record>

    <record model="ir.rule" id="own_timeoff_responsible">
            <field name="name">Own Timeoff</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_custom.timeoff_all_employees'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
    </record>

    <record id="hr_employee_self_rule" model="ir.rule">
        <field name="name">Employee: See Own Record Only</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="hr_employee_officer_rule" model="ir.rule">
        <field name="name">HR Officer: See All Employees</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</data>
</odoo>