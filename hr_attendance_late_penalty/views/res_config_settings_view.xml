<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_hr_attendance_late_penalty" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.attendance.late.penalty</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- Insert after an existing block in hr.attendance settings -->
                <block name="overtime_settings" position="after">
                    <block title="Attendance Late/Early Penalty" id="hr_attendance_late_penalty">
                        <div id="hr_attendance_late_penalty_settings" class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane">

                            </div>
                            <div class="o_setting_right_pane">
                               <label for="late_penalty_days_count"/>
                                <div class="text-muted">
                                    Allowed late/early occurrences per month before creating a half-day leave.
                                </div>
                                                              <field name="late_penalty_days_count"/>


                            </div>
                        </div>
                        <div id="hr_attendance_penalty_leave_type" class="col-12 col-lg-12 o_setting_box">
                            <div class="o_setting_left_pane">

                            </div>
                            <div class="o_setting_right_pane">
                               <label for="penalty_leave_type_id"/>
                                <div class="text-muted">
                                    The leave type to use for the penalty (e.g., Unpaid, Casual, etc.).
                                </div>
                                                              <field name="penalty_leave_type_id" options="{'no_create_edit': False}"/>


                            </div>
                        </div>
                    </block>
                </block>
            </field>
        </record>
    </data>
</odoo>
