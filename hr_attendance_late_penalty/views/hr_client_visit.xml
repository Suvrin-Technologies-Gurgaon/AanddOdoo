<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_hr_client_visit_tree" model="ir.ui.view">
        <field name="name">hr.client.visit.tree</field>
        <field name="model">hr.client.visit</field>
        <field name="arch" type="xml">
            <list string="Local Visit">
                <field name="employee_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="client_name"/>
                <field name="location"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_client_visit_form" model="ir.ui.view">
        <field name="name">hr.client.visit.form</field>
        <field name="model">hr.client.visit</field>
        <field name="arch" type="xml">
            <form string="Local Visit">
                <header>
                    <button name="action_submit" type="object" string="Submit"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_approve" type="object" string="Approve"
                            class="btn-success"
                            groups="hr_attendance_late_penalty.group_local_visit_manager"
                            invisible="state != 'submitted'"/>

                    <button name="action_reject" type="object" string="Reject"
                            class="btn-danger"
                            groups="hr_attendance_late_penalty.group_local_visit_manager"
                            invisible="state != 'submitted'"/>

                    <button name="action_cancel_client_visit" type="object" string="Cancel"
                            class="btn-secondary" invisible="state != 'draft'"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="start_time" readonly="state != 'draft'"/>
                            <field name="end_time" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="client_name" readonly="state != 'draft'"/>
                            <field name="location" readonly="state != 'draft'"/>
                            <field name="purpose" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </sheet>
                <chatter reload_on_follower="True"/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_client_visit" model="ir.actions.act_window">
        <field name="name">Local Visit</field>
        <field name="res_model">hr.client.visit</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_client_visit"
              name="Local Visit"
              parent="hr_attendance.menu_hr_attendance_root"
              action="action_hr_client_visit"/>
</odoo>
