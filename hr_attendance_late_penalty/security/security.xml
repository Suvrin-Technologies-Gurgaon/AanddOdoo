<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="group_local_visit">
            <field name="name">Local Visit</field>
            <field name="description">Helps you manage your Local Visit.</field>
            <field name="sequence">17</field>
        </record>

        <record id="group_local_visit_employee" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="group_local_visit" />
        </record>

        <record id="group_local_visit_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="group_local_visit" />
            <field name="implied_ids" eval="[(4, ref('hr_attendance_late_penalty.group_local_visit_employee'))]" />
        </record>

        <record id="client_visit_rule_own" model="ir.rule">
            <field name="name">Local Visit: Own Records</field>
            <field name="model_id" ref="hr_attendance_late_penalty.model_hr_client_visit"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_attendance_late_penalty.group_local_visit_employee'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record id="client_visit_rule_visibility" model="ir.rule">
            <field name="name">Local Visit: Visibility</field>
            <field name="model_id" ref="hr_attendance_late_penalty.model_hr_client_visit"/>
            <field name="domain_force">[('employee_id','child_of',[user.employee_id.id])]</field>
            <field name="groups" eval="[(4, ref('hr_attendance_late_penalty.group_local_visit_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>
    </data>
</odoo>